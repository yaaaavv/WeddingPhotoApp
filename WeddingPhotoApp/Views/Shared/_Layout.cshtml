<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - WeddingPhotoApp</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/WeddingPhotoApp.styles.css" asp-append-version="true" />
        <meta property="og:title" content="Kaho & Sho Wedding Photo Album" />
        <meta property="og:description" content="結婚式の思い出をみんなで振り返ろう。" />
        <meta property="og:image" content="https://your-domain.com/images/hero.webp" />
        <meta property="og:url" content="https://your-domain.com/" />
        <meta property="og:type" content="website" />
        <meta name="twitter:card" content="summary_large_image" />

    </head>
    <body>
        <header>
        <nav class="navbar navbar-expand-sm navbar-light custom-navbar mb-3">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index"></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-center">
                    <ul class="navbar-nav">
                        <li class="nav-item px-3">
                            <a class="nav-link custom-nav-link" asp-controller="Home" asp-action="Index">HOME</a>
                        </li>
                        <li class="nav-item px-3">
                            <a class="nav-link custom-nav-link" asp-controller="Home" asp-action="Gallery">Gyalley</a>
                        </li>
                        <li class="nav-item px-3">
                            <a class="nav-link custom-nav-link" asp-controller="Photo" asp-action="Comments">Comment</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        </header>
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <footer>
            &copy; 2025 マッキー＆しょうくん結婚式アルバム
        </footer>

        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        <script src="~/js/comment.js"></script>
        @await RenderSectionAsync("Scripts", required: false)
    </body>
</html>
