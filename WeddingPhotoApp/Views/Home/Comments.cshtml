@model List<Photo>

@{
    ViewData["Title"] = "コメント付き写真一覧";
}

<h2 class="text-center mt-4">💬 コメントがある写真一覧</h2>

<div class="photo-grid">
    @foreach (var photo in Model)
    {
        <div class="photo-box">
            <a href="/photo/comment/@photo.PhotoId?page=@ViewBag.CurrentPage">
                <img src="/photo/@photo.FileName" alt="photo" />
            </a>
        </div>
    }
</div>

@* <a class="btn btn-secondary mt-3" href="/photo/comments?page=@(page)">← 戻る</a> *@

<style>
    .chat-container {
        max-width: 600px;
        margin: auto;
    }

    .chat-bubble {
        background-color: #F0F0F0;
        border-radius: 10px;
        padding: 10px 15px;
        margin-bottom: 15px;
        position: relative;
        animation: fadeIn 0.4s ease-in-out;
    }

    .chat-bubble strong {
        color: #2C2319;
    }

    .chat-bubble .date {
        font-size: 0.75em;
        color: gray;
        display: block;
        margin-top: 4px;
    }

    @@keyframes fadeIn {
        from { opacity: 0; transform: translateY(10px); }
        to { opacity: 1; transform: translateY(0); }
    }
</style>
